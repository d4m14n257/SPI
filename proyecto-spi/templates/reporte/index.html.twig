{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}

<div id="content-wrapper" class="d-flex flex-column">
    {% set RENDER_FORM = "" %}
    <h1 class="mx-auto pb-2">{{ page_title }}</h1>
    <div class="row">
        <div class="col-lg-3 col-6">
            <div class="small-box bg-indigo">
                <div class="inner">
                    <h3>Almacen</h3>
                </div>
                <div class="icon" style="color:white; opacity:0.3;">
                    <i class="fas fa-archive"></i>
                </div>
                <a href="" class="small-box-footer btn-lg" >
                   <i class="fas fa-arrow-circle-down"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-6">
            <div class="small-box bg-purple">
                <div class="inner">
                    <h3>Movimientos</h3>
                </div>
                <div class="icon" style="color:white; opacity:0.3;">
                    <i class="fas fa-exchange-alt"></i>
                </div>
                <a href="" class="small-box-footer btn-lg" >
                   <i class="fas fa-arrow-circle-down"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-6">
            <div class="small-box bg-maroon">
                <div class="inner">
                    <h3>Compras</h3>
                </div>
                <div class="icon" style="color:white; opacity:0.3;">
                    <i class="fas fa-money"></i>
                </div>
                <a href="#" class="small-box-footer btn-lg" >
                   <i class="fas fa-arrow-circle-down"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-6">
            <div class="small-box bg-olive">
                <div class="inner">
                    <h3>Formatos</h3>
                </div>
                <div class="icon" style="color:white; opacity:0.3;">
                    <i class="far fa-files-o"></i>
                </div>
                <div class="dropdown small-box-footer">
                    <button class="btn btn-sm dropdown-toggle" type="button" id="dropdownFormatos" data-bs-toggle="dropdown" aria-expanded="false" style="color:white;">
                        <i class="fas fa-arrow-circle-down"></i>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownFormatos">
                        <li><a class="dropdown-item" href="#">Action</a></li>
                        <li><a class="dropdown-item" href="#">Another action</a></li>
                        <li><a class="dropdown-item" href="#">Something else here</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="">
            {{ render(controller('\\App\\Controller\\ReporteController::form_report')) }}
        </div>
    </div>
</div>

{% endblock %}
