</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.1.1/chart.min.js" integrity="sha512-BqNYFBAzGfZDnIWSAEGZSD/QFKeVxms2dIBPfw11gZubWwKUjEgmFUtUls8vZ6xTRZN/jaXGHD/ZaxD9+fDo0A==" crossorigin="anonymous"></script>
<script>

    //ELEMENTOS QUE SE OBTENDRIAN POR MEDIO DE LOS CONTROLADORES DEL SISTEMA

    const labels = [
        'January',
        'February',
        'March',
        'April',
        'May',
        'June',
      ];
    const data = {
        labels: labels,
        datasets: [{
            label: 'Numero de Obras',
            data: [4, 6, 3, 7, 10, 8, 10],
            fill: true,
            borderColor: 'rgb(75, 192, 192)',
            tension: 0.3
        }]
    };

    const config = {
        type: 'line',
        data: data,
    };

    var obrasChart = new Chart(
        document.getElementById('obrasChart'),
        config
    );
    var obrasChart2 = new Chart(
        document.getElementById('obrasChart2'),
        config
    );
    
</script>

